<!DOCTYPE html>
<html>
<head>
  <title>Chaseuni</title>
  <%= stylesheet_link_tag    "application", "custom", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container" id="container">
	<nav class="navbar navbar-default" role="navigation">
	  <!-- Brand and toggle get grouped for better mobile display -->
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	      <span class="sr-only">Toggle navigation</span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	    </button>
	    <a class="navbar-brand" href="/">Chaseuni</a>
	  </div>

	  <!-- Collect the nav links, forms, and other content for toggling -->
	  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	    <ul class="nav navbar-nav">
	      <li class="active"><a href="#">Link</a></li>
	      <li><a href="#">Link</a></li>
		 <li class="dropdown">
	        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Faculties <b class="caret"></b></a>
	        <ul class="dropdown-menu">
	          <li><%=link_to "List all faculties", faculties_path%></li>
	          <li><%=link_to "Create a new faculty", new_faculty_path%></li>
	        </ul>
		</li>
	      <li class="dropdown">
	        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Courses <b class="caret"></b></a>
	        <ul class="dropdown-menu">
	          <li><%=link_to "List all courses", courses_path%></li>
	          <li><%=link_to "Create a new course", new_course_path%></li>
	          <li><a href="#">Dummy link1</a></li>
	          <li class="divider"></li>
	          <li><a href="#">Dummy link2</a></li>
	        </ul>
	      </li>
	    </ul>
	    <ul class="nav navbar-nav navbar-right">
	      <li>
	      	<%if user_signed_in?%>
				<%=link_to "logout",destroy_user_session_path, :method => 'delete' %>
			<%end%>
	      </li>
		<!--
	      <li class="dropdown">
	        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
	        <ul class="dropdown-menu">
	          <li><a href="#">Action</a></li>
	          <li><a href="#">Another action</a></li>
	          <li><a href="#">Something else here</a></li>
	          <li class="divider"></li>
	          <li><a href="#">Separated link</a></li>
	        </ul>
	      </li>
		-->
	    </ul>
	  </div><!-- /.navbar-collapse -->
	</nav>
	<% if notice %>
	<div class="alert alert-info"><%= notice %></div>
	<% end %>
	<% if alert %>
	<div class="alert alert-danger"><%= alert %></div>
	<% end %>
	<div class="row container">
		<%if user_signed_in?%>
			<%= yield %>
		<%else%>
		<div class="col-md-offset-3 col-md-6">
		<div class="panel panel-primary">
			<div class="panel-heading">
		    <h3 class="panel-title"><%=yield(:heading)%></h3>
		  </div>
		  <div class="panel-body">
		   <%=yield%>
		  </div>
		  <div class="panel-footer">
		  	<%= render "devise/shared/links" %>
		  </div>
		</div>
		</div>
		<%end%>
	</div>
</div>
</body>
</html>
