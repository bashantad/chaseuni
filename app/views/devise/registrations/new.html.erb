<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

	<%error=devise_errors%>
	<div class="form-item">
		<%=f.label :full_name%>
		<%=f.text_field :full_name, :autofocus => true%>
		<% if error && error[:full_name].present?%>
			<div class="text-error"><%=error[:full_name]%> </div>
		<%end%>
	</div>
	<div class="form-item">
		<%= f.label :email %>
		<%= f.email_field :email, :autofocus => true, : %>
		<% if error && error[:email].present?%>
			<div class="text-error">
				<%=error[:email][0]%>
			 </div>
		<%end%>
	</div>

	<div class="form-item">
		<%= f.label :password %>
		<%= f.password_field :password %>
		<% if error && error[:password].present?%>
			<div class="text-error">
			<%=error[:password][0]%> 
			</div>
		<%end%>
	</div>

	<div class="form-item">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
		<% if error && error[:password_confirmation].present?%>
			<div class="text-error">
				<%=error[:password_confirmation][0]%> 
			</div>
		<%end%>
	</div>

	<div class="form-item">
	<%= f.submit "Sign up", :class => "btn btn-primary" %>
	</div>
<% end %>

<%= render "devise/shared/links" %>
