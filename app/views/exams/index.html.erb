<h2>Listing exams of <%=@course.title%></h2>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
	  <th>No of questions</th>
	  <th>Full mark</th>
      <th>Type</th>
      <th>Difficulty level</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.name %></td>
		<td><%= exam.no_of_questions%></td>
		<td><%= exam.full_mark%>
        <td><%= exam.exam_type %></td>
        <td><%= exam.difficulty_level %></td>
        <td><%= link_to 'Show', course_exam_path(@course, exam) %></td>
        <td><%= link_to 'Edit', edit_course_exam_path(@course, exam) %></td>
        <td><%= link_to 'Destroy', course_exam_path(@course, exam), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Exam', new_course_exam_path, :class => "fancybox" %>
